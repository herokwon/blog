#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat $COMMIT_MSG_FILE)

case "$COMMIT_MSG" in
  feat*)    REPLACED_MSG=$(echo "$COMMIT_MSG" | sed 's/^feat/âœ¨ feat/') ;;
  fix*)     REPLACED_MSG=$(echo "$COMMIT_MSG" | sed 's/^fix/ðŸž fix/') ;;
  refactor*) REPLACED_MSG=$(echo "$COMMIT_MSG" | sed 's/^refactor/â™»ï¸ refactor/') ;;
  test*)    REPLACED_MSG=$(echo "$COMMIT_MSG" | sed 's/^test/ðŸ§ª test/') ;;
  style*)   REPLACED_MSG=$(echo "$COMMIT_MSG" | sed 's/^style/ðŸ§© style/') ;;
  design*)  REPLACED_MSG=$(echo "$COMMIT_MSG" | sed 's/^design/ðŸŽ¨ design/') ;;
  assets*)  REPLACED_MSG=$(echo "$COMMIT_MSG" | sed 's/^assets/ðŸ“ assets/') ;;
  docs*)    REPLACED_MSG=$(echo "$COMMIT_MSG" | sed 's/^docs/ðŸ“ docs/') ;;
  chore*)   REPLACED_MSG=$(echo "$COMMIT_MSG" | sed 's/^chore/âš™ï¸ chore/') ;;
  *)         REPLACED_MSG="$COMMIT_MSG" ;;
esac

echo "$REPLACED_MSG" > $COMMIT_MSG_FILE
